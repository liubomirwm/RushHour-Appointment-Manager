@using RushHour.ViewModels;
@model IEnumerable<ViewAppointmentsViewModel>

@{
    ViewBag.Title = "Your current appointments";
}

<h2>All appointments</h2>

@if (Model.Count() == 0)
{
    <p>You have no appointments yet.</p>
    @Html.ActionLink("Add a new appointment", "AddAppointment", "Activities")
}
else
{
    @Html.ActionLink("Add a new appointment", "AddAppointment", "Appointments")
    <br />
    <br />
    <table id="appointmentsTable">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Is Cancelled</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ViewAppointmentsViewModel appointment in Model)
            {
                <tr>
                    <td>@appointment.StartDateTime</td>
                    <td>@appointment.EndDateTime</td>
                    <td>@appointment.IsCancelled</td>
                    <td>@Html.ActionLink("Edit", "EditAppointment", "Appointments", new { id = appointment.AppointmentId }, null)</td>
                    <td>@Html.ActionLink("Cancel Appointment", "CancelAppointment", "Appointments", new { id = appointment.AppointmentId }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}